<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link href="../Content/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="../Content/css/styles.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script type="text/javascript" src="/Content/js/fight.js"></script>
    <title>"Fun" Fighters</title>
  </head>
  <body>

    <!-- Choose Fighter Menu -->

    <div id="chooseFighterMenu">
      <h1>Fight Setup</h1>
      <div class="row">
        <div class="col-xs-6">
          <h2>Choose Fighter</h2>
          <select id="player1" name="player1">
            <option value="default">Choose Fighter</option>
            @{
              foreach(var fighter in Model){
                <option value="@fighter.GetId()">@fighter.GetName()</option>
              }
            }
          </select>
        </div>
        <div class="col-xs-6">
          <h2>Choose Opponent</h2>
          <select id="player2" name="player2">
            <option value="default">Choose Opponent</option>
            @{
              foreach(var fighter in Model){
                <option value="@fighter.GetId()">@fighter.GetName()</option>
              }
            }
          </select>
        </div>
        <button id="submitFightButton" type="submit">FIGHT!</button>
      </div>
    </div>

    <!--End Fight Menu -->
    <div id="endFightMenu">
      <h1>The winner is <span id="winner"></span>!</h1>

      <a href="/">Return Home</a>
      <a href="/fight">Play Another Fight</a>
    </div>

    <!--Fight UI -->
    <!-- start player 1 -->
    <div id="fightUI" class="row">
      <div class="col-xs-1"></div>
      <div class="col-xs-3">
        <h1 id="player1Name"></h1>
        <div id="fighterLeft" class="fighterHeadshot"><img src="" id="player1Image"></div>
        <div class="fighterStats">
          <div class="row">
            <div class="col-xs-5">
              <span>HP: <span><span id="player1HpCurrent"></span><span> / <span id="player1HpMax"></span>
            </div>
            <div class="col-xs-5">
              <span>MP: <span><span id="player1MpCurrent"></span><span> / <span id="player1MpMax"></span>
            </div>
          </div>
          <div class="lowerStats">
            <div class="row">
              <div class="col-xs-2">
                <img src="../Content/UI/attack.png">
              </div>
              <div class="col-xs-2">
                <span id="player1Attack"></span>
              </div>
              <div class="col-xs-2">
                <img src="../Content/UI/speed.png">
              </div>
              <div class="col-xs-2">
                <span id="player1Speed"></span>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-2">
                <img src="../Content/UI/accuracy.png">
              </div>
              <div class="col-xs-2">
                <span id="player1Accuracy"></span>
              </div>
              <div class="col-xs-2">
                <img src="../Content/UI/luck.png">
              </div>
              <div class="col-xs-2">
                <span id="player1Luck"></span>
              </div>
            </div>
          </div>
        </div>
        <div id="moveContainer">
          <div id="jab" class="moveSelector">
            <h2>JAB</h2>
          </div>
          <div id="hook" class="moveSelector">
            <h2>HOOK</h2>
          </div>
          <div id="uppercut" class="moveSelector">
            <h2>UPPERCUT</h2>
          </div>
          <div id="block" class="moveSelector">
            <h2>BLOCK</h2>
          </div>
          <div id="blind" class="moveSelector">
            <h2>BLIND - 1MP</h2>
          </div>
          <div id="lockon" class="moveSelector">
            <h2>LOCKON - 2MP</h2>
          </div>
          <div id="burn" class="moveSelector">
            <h2>BURN - 6MP</h2>
          </div>
        </div>
      </div>
      <div class="col-xs-4">
        <h1 id="vsHeader">VS</h1>
        <div id="gameLog"></div>
      </div>
      <!-- start player 2 -->
      <div class="col-xs-3">
        <h1 id="player2Name"></h1>
        <div id="fighterLeft" class="fighterHeadshot"><img src="" id="player2Image"></div>
        <div class="fighterStats">
          <div class="row">
            <div class="col-xs-5">
              <span>HP: <span><span id="player2HpCurrent"></span><span> / <span id="player2HpMax"></span>
            </div>
            <div class="col-xs-5">
              <span>MP: <span><span id="player2MpCurrent"></span><span> / <span id="player2MpMax"></span>
            </div>
          </div>
          <div class="lowerStats">
            <div class="row">
              <div class="col-xs-2">
                <img src="../Content/UI/attack.png">
              </div>
              <div class="col-xs-2">
                <span id="player2Attack"></span>
              </div>
              <div class="col-xs-2">
                <img src="../Content/UI/speed.png">
              </div>
              <div class="col-xs-2">
                <span id="player2Speed"></span>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-2">
                <img src="../Content/UI/accuracy.png">
              </div>
              <div class="col-xs-2">
                <span id="player2Accuracy"></span>
              </div>
              <div class="col-xs-2">
                <img src="../Content/UI/luck.png">
              </div>
              <div class="col-xs-2">
                <span id="player2Luck"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-1"></div>
    </div>
  </body>
</html>
